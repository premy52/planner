<p id="notice"><%= notice %></p>

<h1>Publications</h1>

<table>
  <thead>
    <tr>
      <th>Pub name</th>
      <th>Client</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @publications.each do |publication| %>
      <tr>
        <td><%= publication.pub_name %></td>
        <td><%= publication.client.client_name %></td>
        <td><%= link_to 'Show', client_publications_path %></td>
        <td><%= link_to 'Edit', edit_client_publication_path(publication.client, publication) %></td>
        <td><%= link_to 'Destroy', client_publication_path(publication.client, publication), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

